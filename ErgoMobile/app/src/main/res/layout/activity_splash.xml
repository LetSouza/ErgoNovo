<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ergo.leticia.ergomobile.activity.SplashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ergo_logo" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:padding="30dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBarSplash"
        android:maxHeight="32dip"
        android:maxWidth="32dip"
        android:minWidth="32dip"
        android:minHeight="32dip"/>

    <TextView
        android:id="@+id/txvSplashLogo"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:padding="30dip"
        android:textSize="40sp"
        android:layout_below="@id/progressBarSplash"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/ErgoMobile"/>

</RelativeLayout>
